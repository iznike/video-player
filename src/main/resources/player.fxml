                              <Insets left="5.0" />
                           </HBox.margin>
                        </Label>
                        <Slider fx:id="slider" focusTraversable="false" HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblMaxTime" style="-fx-text-fill: white;" text="Label">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </Label>
