                                    <Insets left="10.0" right="10.0" />
                                 </HBox.margin></Button>
                              <Button fx:id="btnPause" mnemonicParsing="false" onAction="#playPause" prefHeight="25.0" prefWidth="25.0" styleClass="icon" text="X" textAlignment="CENTER">
