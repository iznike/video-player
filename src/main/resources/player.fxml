                                 </children>
                                 <HBox.margin>
                                    <Insets left="20.0" right="20.0" />
                                 </HBox.margin>
                              </Group>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefWidth="250.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="btnBackTen" mnemonicParsing="false" onAction="#backTen" prefHeight="25.0" prefWidth="25.0" styleClass="icon" textAlignment="CENTER">
